<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.DaftarBarang2Activity"
    android:background="@color/primaryColor">

    <LinearLayout
        android:id="@+id/lyt_search2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/button_editprofile">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_search"
            android:layout_margin="5dp"
            app:iconifiedByDefault="false"
            app:searchHintIcon="@null"
            app:queryHint="Search..."
            android:focusable="false"
            app:closeIcon="@drawable/clear"
            app:searchIcon="@drawable/search" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyt_table2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_barang"
        android:paddingHorizontal="20dp"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Barang"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp"
            android:textColor="@color/primaryColor"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewHistory3"
            android:layout_width="match_parent"
            android:layout_height="565dp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Cart"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="13sp"
        android:textColor="@color/primaryColor"
        android:background="@drawable/button_shape" />


</androidx.constraintlayout.widget.ConstraintLayout>