<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DaftarActivity"
    android:padding="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/logo_smartlab"
        android:paddingTop="20dp"
        android:id="@+id/lg_smartlab"/>

    <TextView
        android:id="@+id/txt_deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lg_smartlab"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:text="Silakan Daftar terlebih dahulu." />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_deskripsi"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Nama"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#25388D"
        android:id="@+id/txt_nama"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_nama"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Masukan Nama anda disini"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/edittext_shape"
        android:height="40dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/edt_nama"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_nama"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Email"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#25388D"
        android:id="@+id/txt_email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Masukan Email anda disini"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/edittext_shape"
        android:height="40dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/edt_email"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_email"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Nomor Handphone"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#25388D"
        android:id="@+id/txt_nohp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_nohp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Masukan Nomor Handphone anda disini"
        android:inputType="number"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/edittext_shape"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/edt_nohp"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_nohp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Password"
        android:fontFamily="@font/poppins_bold"
        android:textColor="#25388D"
        android:id="@+id/txt_password"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputlayoutDaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_password"
        android:background="@drawable/edittext_shape"
        android:hint="Masukan Password anda disini"
        android:paddingHorizontal="15dp"
        app:passwordToggleEnabled="true"
        android:paddingBottom="5dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_passwordDaftar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/poppins_regular"
            android:textSize="14sp"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/inputlayoutDaftar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:text="Sudah punya akun?"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:textColor="#30449E"
        android:id="@+id/txt_lupapw" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/inputlayoutDaftar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:text="Daftar"
        android:paddingHorizontal="55dp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:background="@drawable/button_shape"
        android:width="188dp"
        android:id="@+id/btn_daftar" />

</androidx.constraintlayout.widget.ConstraintLayout>