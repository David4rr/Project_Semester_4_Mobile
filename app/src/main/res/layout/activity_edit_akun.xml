    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imgProfile"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Nama Pengguna"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:id="@+id/txt_nama"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_nama"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Masukan Nama anda disini"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/edittext_shape"
        android:height="40dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:id="@+id/edt_nama"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_nama"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Email"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:id="@+id/txt_email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Masukan Email anda disini"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/edittext_shape"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:id="@+id/edt_email"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_email"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Nomor Handphone"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:id="@+id/txt_nohp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_nohp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Masukan Nomor Handphone anda disini"
        android:inputType="number"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/edittext_shape"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:id="@+id/edt_nohp"/>

