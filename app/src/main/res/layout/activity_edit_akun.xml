<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EditAkunActivity"
    android:padding="20dp"
    android:background="@color/primaryColor">

    <ImageView
        android:id="@+id/img_backEditAkun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/panah_kembali"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp" />

    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Akun"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_backEditAkun"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:id="@+id/txt_ttlAkun"/>

    <TextView
        android:id="@+id/ttl_uploadProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_ttlAkun"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:text="Upload Profile"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toBottomOf="@+id/ttl_uploadProfile"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/imgProfile"
        app:layout_constraintTop_toBottomOf="@+id/ttl_uploadProfile"
        app:layout_constraintBottom_toTopOf="@+id/txt_nama"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/button_shape"
        android:text="Upload Profile"
        android:textAllCaps="false"
        android:paddingHorizontal="10dp"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imgProfile"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:text="Nama Pengguna"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:id="@+id/txt_nama"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/txt_nama"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Masukan Nama anda disini"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/edittext_shape"
        android:height="40dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:id="@+id/edt_nama"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_nama"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Email"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:id="@+id/txt_email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_email"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Masukan Email anda disini"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/edittext_shape"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:id="@+id/edt_email"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_email"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Nomor Handphone"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:id="@+id/txt_nohp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_nohp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Masukan Nomor Handphone anda disini"
        android:inputType="number"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_regular"
        android:background="@drawable/edittext_shape"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:id="@+id/edt_nohp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edt_nohp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:text="Perbarui"
        android:paddingHorizontal="55dp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:background="@drawable/button_shape"
        android:id="@+id/btn_daftar" />

</androidx.constraintlayout.widget.ConstraintLayout>